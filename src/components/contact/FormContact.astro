  id="contactFormContainer"
  data-locale={locale}
  data-api-host={apiHost}
  data-api-token={apiToken}
  data-contact-form-path={contactFormPath}
  data-message-placeholder={messagePlaceholder}
  data-department-placeholder={departmentPlaceholder}
