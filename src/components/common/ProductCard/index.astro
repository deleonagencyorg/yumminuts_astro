---
export interface Props {
  title: string;
  image: string; // product image URL
  bgImage: string; // background image URL
  description?: string;
}

const { title, image, bgImage, description } = Astro.props as Props;
---

<div class="group cursor-pointer">
  <!-- Product Image Container -->
  <div class="relative h-[320px] md:h-[400px] mb-4 overflow-hidden rounded-lg">
    <!-- Background Image -->
    <div 
      class="absolute inset-0 rounded-lg transition-all duration-300 group-hover:scale-105 bg-center bg-cover bg-no-repeat" 
      style={`background-image: url('${bgImage}')`}>
    </div>

    <!-- Product Image -->
    <div 
      class="absolute bg-center bg-cover bg-no-repeat w-[70%] h-[80%] top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 transition-all duration-300 group-hover:scale-110 shadow-lg rounded"
      style={`background-image: url('${image || '/images/products/placeholder.jpg'}')`}>
    </div>

    <!-- Hover Overlay -->
    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-all duration-300 rounded-lg"></div>
  </div>

  <!-- Product Title -->
  <div class="text-center">
    <h3 class="font-sans text-lg md:text-xl font-medium text-black tracking-[-0.5px] leading-tight">
      {title}
    </h3>
    {description && (
      <p class="text-gray-600 text-sm mt-2 line-clamp-2">{description}</p>
    )}
  </div>
</div>
