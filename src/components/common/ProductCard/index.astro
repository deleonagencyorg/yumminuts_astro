---
export interface Props {
  title: string;
  image: string; // product image URL
  bgColor?: string; // background color for SVG shape
  description?: string;
  size?: 'sm' | 'md' | 'lg';
  hideText?: boolean;
}

const { title, image, bgColor = '#95CFF2', description, size = 'md', hideText = false } = Astro.props as Props;

const sizeClasses = (() => {
  switch (size) {
    case 'lg':
      return 'h-[480px] md:h-[560px]';
    case 'sm':
      return 'h-[220px] md:h-[260px]';
    default:
      return 'h-[320px] md:h-[400px]';
  }
})();
---

