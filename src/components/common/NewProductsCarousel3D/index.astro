---
import NewProductsCarousel3DReact from './index.jsx';

export interface Props {
  products: Array<{
    title: string;
    image: string;
    description?: string;
    price?: string;
  }>;
  autoplay?: boolean;
  interval?: number;
  arrows?: boolean;
  class?: string;
}

const { 
  products, 
  autoplay = true, 
  interval = 3000, 
  arrows = true,
  class: className = ''
} = Astro.props;
---

<div class={className}>
  <NewProductsCarousel3DReact 
    client:only="react"
    products={products} 
    autoplay={autoplay} 
    interval={interval} 
    arrows={arrows}
    onSlideChange={() => {}}
  />
</div>

